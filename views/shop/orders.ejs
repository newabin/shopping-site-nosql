<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
                <div class="grid">
                    <% orders.forEach(order => { %>
                        <% order.products.forEach(product => { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title"><%= product.product.title %> X <%= product.quantity %></h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= product.product.imageUrl %>"
                                        alt="<%= product.product.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$<%= product.product.price %></h2>
                                    <p class="product__description"><%= product.product.description %></p>
                                </div>
                            </article>
                            <% }) %>
                    <% }) %>
                </div>
            <% } else { %>
                <h1>No Order done At this Moment !</h1>
            <% } %>
        </main>
    
<%- include('../includes/end.ejs') %>